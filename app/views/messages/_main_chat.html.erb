<div class="chat-header">
  <div class="left-header">
    <div class="login-name">
      hogefuga
    </div>
  </div>

  <div class="right-header">
    <div class="chat-end">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="chat-main">
  <div class="message">
    <div class=message-def>
      <div class="message-username">
        Tom
      </div>
      <div class="message-time">
        yyyy/mm/dd(aaa) HH:MM:SS
      </div>
    </div>
    <div class=message-lower>
      <div class="message-main">
        message
      </div>
    </div>
  </div>
</div>

<%= form_with mode: [@room, @message], class: 'chat-footer', local: true do |f| %>
  <div class="footer-form">
  <%= f.text_field :content, class: 'input-field', placeholder: 'type a message' %>
    <label class="image-form">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'send' %>
<% end %>
